<p id="notice"><%= notice %></p>

<h1>My Reflections</h1>

<table class ="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>What's Working?</th>
      <th>What's not working?</th>
      <th>What Next?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.worked %></td>
        <td><%= post.didnt %></td>
        <td><%= post.next %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

